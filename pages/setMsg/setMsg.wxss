/* pages/setMsg/setMsg.wxss */
.page{
  width: 100%;
  height: 100vh;
  background:rgba(244,244,244,1);
  padding: 20rpx 0rpx;
  box-sizing: border-box;
  overflow: hidden;
  }
.settop{
  width: 100%;
  background: #fff;
}
.setup{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
}
.common{
  margin-left:30rpx; 
  width: 96%;
  padding: 18rpx 30rpx 18rpx 0rpx;
  border-bottom: solid #f4f4f4 1rpx;
  clear: both;
  box-sizing: border-box;
  position: relative
}
.common text{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:42rpx;
}
.common image{
  position: absolute;
  width: 12rpx;
  height: 24rpx;
  right: 30rpx;
  top: 50%;
  margin-top: -12rpx;
}
.common .phone{
  display: inline-block;
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  text-align: right;
  position: absolute;
  right: 80rpx;
  top: 50%;
  margin-top: -20rpx;
}