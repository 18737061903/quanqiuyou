/* pages/businessInfor/businessInfor.wxss */
.line {
    width: 100%;
    height: 1rpx;
    background: #DBDBDB;
}
.item {
    width: 100%;
    padding: 30rpx 0 0rpx 30rpx;
    box-sizing: border-box;
}
.item .item-content{
    border-bottom: 1rpx solid #DBDBDB;
    padding-bottom: 30rpx;
    box-sizing: border-box;
}
.item .border-none{
    border: none;
}
.item .title {
    display: block;
    width: 100%;
    line-height: 45rpx;
    font-size: 32rpx;
    color: #333333;
    margin-bottom: 20rpx;
}
/* 营业时间 */
.item .time {
    width: 100%;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 10rpx;
}
.item .time:last-child {
    margin-bottom: 0;
}
/* 设施 */
.item .facility {
    display: inline-block;
    font-size: 26rpx;
    color:rgba(102,102,102,1);
    line-height: 37rpx;
    letter-spacing: 2rpx;
    margin-right: 100rpx;
    margin-bottom: 12rpx;
}
/* 标签 */
.item .label {
    display: inline-block;
    font-size: 24rpx;
    color:#999999;
    line-height: 40rpx;
    background: #F4F4F4;
    margin-right: 12rpx;
    border-radius: 20rpx;
    overflow: hidden;
    height: 40rpx;
    padding:  0 16rpx;
    box-sizing: border-box;
    margin-bottom: 12rpx;
}