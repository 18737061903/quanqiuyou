/* pages/orderList/orderList.wxss */
.all {
    width: 100%;
    background: #F4F4F4;
    position: relative;
    height: 100vh;
    padding-top: 0;
    box-sizing: border-box;
    transition: all .7s;
}
.line {
    height: 20rpx;
    width: 100%;
    background: #F4F4F4;
}
.line-bor {
    height: .5rpx;
    width: 100%;
    background: #DBDBDB;
}
.goods-line {
    height: 14rpx;
    width: 100%;
    background: #F8F8F8;
}
.msg-line {
    height: 20rpx;
    width: 100%;
    background: #fff;
}
.load-more {
    height: 80rpx;
    width: 100%;
    background: #fff;
    color: #333;
    font-size: 28rpx;
    text-align: center;
    line-height: 80rpx;
}
/* no-more */
.no-more {
    height: 40rpx;
    line-height: 40rpx;
    width: 100%;
    font-size: 24rpx;
    color: #333;
    text-align: center;
}
/* 缺省 */
.blank {
    width: 100%;
    height: 100vh - 100rpx;
}
.blank .order-blank {
    width: 171rpx;
    height: 166rpx;
    margin: 165rpx auto;
    display: block;
    margin-bottom: 36rpx;
}
.blank .blank-desc {
    width: 100%;
    line-height: 37rpx;
    font-size: 26rpx;
    color: #666666;
    display: block;
    text-align: center;
}
/* menu btn */
.menu-btn {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    background: #fff;
    position: fixed;
    top: 0;
    left: 0;
    box-shadow: 0px 2rpx 8rpx 0px rgba(102,102,102,0.1);
}
.menu-btn .btn-item {
    width: 25%;
    text-align: center;
    font-size: 28rpx;
    color: #333333;
}
/* btn active */
.menu-btn .item-active {
    font-weight: bold;
    color: #E85352;
}
/* 下划线 */
.menu-btn .select-line {
    height: 4rpx;
    width: 11%;
    left: 7%;
    background-color: #E85352;
    position: absolute;
    bottom: 0;
    transition:left 200ms;
}
/* 订单列表 */
.order-list {
    width: 100%;
    /* margin-top: 100rpx; */
}
.order-list .order-item{
    width: 100%;
    background: #fff;
}
/* 线上普通商品订单 */
.order-item .xs-order {
    width: 100%;
    padding: 30rpx 30rpx 0 30rpx;
    box-sizing: border-box;
}
/* top msg */
.xs-order .top-box {
    width: 100%;
    height: 94rpx;
    line-height: 94rpx;
}
.top-box .shop-img{
    float: left;
    width: 36rpx;
    height: 36rpx;
    margin-right: 12rpx;
    margin-top: 32rpx;
}
.top-box .shop-desc {
    float: left;
    width: 350rpx;
    height: 94rpx;
    line-height: 94rpx;
}
.top-box .shop-desc .shop-name{
    display: inline-block;
    height: 94rpx;
    line-height: 94rpx;
    font-size: 28rpx;
    color: #333333;
    margin-right: 7rpx;
}
.top-box .shop-desc .more-right {
    width: 23rpx;
    height: 23rpx;
    vertical-align: middle;
}
.top-box .express {
    float: right;
    width: 180rpx;
    height: 94rpx;
    line-height: 94rpx;
    text-align: right;
    font-size: 26rpx;
    color: #E85352;
}
/* mid msg */
.xs-order .mid-box {
    width: 100%;
    height: 180rpx;
    background: #F8F8F8;
    display: flex;
}
.xs-order .mid-box .goods-img{
    width: 180rpx;
    height: 180rpx;
    background: #F8F8F8;
}
.xs-order .mid-box .goods-desc{
    flex: 1;
    height: 180rpx;
    background: #F8F8F8;
    padding: 20rpx 20rpx 30rpx 20rpx;
    box-sizing: border-box;
}
.mid-box .goods-desc .goods-name {
    width: 100%;
    height: 76rpx;
    line-height: 38rpx;
    color: #333333;
    font-size: 28rpx;
    display: block;
}
.mid-box .goods-desc .goods-sku {
    width: 100%;
    height: 37rpx;
    line-height: 37rpx;
    color: #999999;
    font-size: 26rpx;
    display: block;
}
/* mid msg */
.xs-order .bot-box {
    width: 100%;
    height: 86rpx;
    line-height: 86rpx;
}
.xs-order .bot-box text{
    float: right;
    font-size: 26rpx;
    color: #333333;
}
.xs-order .bot-box .order-price {
    font-size: 32rpx;
}
.xs-order .bot-box .symbol {
    font-size: 24rpx;
    height: 86rpx;
    line-height: 90rpx;
}
/* btn */
.order-item .btn-box {
    width: 100%;
    height: 88rpx;
    padding: 16rpx 30rpx;
    box-sizing: border-box;
}
.order-item .btn-box .btn-item {
    width: 162rpx;
    height: 55rpx;
    line-height: 56rpx;
    text-align: center;
    font-size: 28rpx;
    background: #fff;
    border-radius: 6rpx;
    box-sizing: border-box;
}
.order-item .btn-box .cancel-btn {
    color: #666666;
    border: .5rpx solid rgba(207,207,207,1);
    float: right;
}
.order-item .btn-box .main-btn {
    color: #FFFFFF;
    background: #E85352;
    float: right;
}
