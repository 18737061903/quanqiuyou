/* pages/o2oCoupons/o2oCoupons.wxss */
/* 店铺优惠券 */
.section {
    width: 100%;
    padding: 10rpx 30rpx 30rpx 20rpx;
    box-sizing: border-box;
    background: #fff;
}
.section .coupons {
    width: 100%;
}
.section .coupon {
    width: 660rpx;
    height: 190rpx;
    position: relative;
}
.coupon .coup-bg {
    width: 100%;
    height: 190rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 999;
}
.coupon .coup-txt {
    width: 100%;
    height: 190rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1000;
    padding-right: 150rpx;
    box-sizing: border-box;
}
.coupon .coup-content {
    width: 510rpx;
    height: 190rpx;
    padding: 40rpx 0;
    padding-left: 20rpx;
    box-sizing: border-box;
    overflow: hidden;
}
.coup-content .coup-title{
    width: 156rpx;
    overflow: hidden;
    font-weight: 600;
    border-right: .5rpx solid #DBDBDB;
    display: inline-block;
    vertical-align: middle;
}
.coup-title .num {
    width: 100%;
    text-align: center;
    font-size: 40rpx;
    line-height: 56rpx;
    height: 56rpx;
    color: #FD4D26;
    margin-bottom: 5rpx;
}
.coup-title .desc {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    line-height: 42rpx;
    height: 42rpx;
    color: #FD4D26;
}
.coup-content .coup-details {
    display: inline-block;
    width: calc(100% - 160rpx);
    padding-left: 15rpx;
    box-sizing: border-box;
    vertical-align: middle;
}
.coup-details .reduce {
    width: 100%;
    height: 42rpx;
    line-height: 42rpx;
    font-size: 30rpx;
    color: #333333;
    margin-bottom: 2rpx;
}
.coup-details .fill {
    width: 100%;
    height: 33rpx;
    line-height: 33rpx;
    font-size: 24rpx;
    color: #E85352;
    margin-bottom: 4rpx;
}
.coup-details .time {
    width: 100%;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 22rpx;
    color: #999999;
}
.coup-txt .coup-img {
    position: absolute;
    right: 0;
    top: 20rpx;
    z-index: 1001;
    width: 150rpx;
    height: 150rpx;
}