/* pages/o2oShopMedia/o2oShopMedia.wxss */
.all {
    width: 100%;
}
.none {
    width: 100%;
    height: 100rpx;
}
/* 菜单 */
.top {
    width: 100%;
    height: 100rpx;
    padding: 18rpx 0;
    box-sizing: border-box;
    background: #fff;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    /* box-shadow: 0px 2rpx 3rpx 0px rgba(102,102,102,0.06); */
}
.menu {
    border-radius: 12rpx;
    border: 2rpx solid rgba(232,83,82,1);
    display: flex;
    width: 302rpx;
    height: 64rpx;
    margin: 0 auto;
}
.menu .btn-item {
    border-radius: 8rpx;
    background: #fff;
    color: #E85352;
    width: 152rpx;
    height: 64rpx;
    line-height: 64rpx;
    font-size: 32rpx;
    text-align: center;
    transition: all ease .5s;
}
.menu .item-active {
    background: #E85352;
    color: #fff;
}
/* 图片列表 */
.list {
    width: 690rpx;
    padding:  30rpx 0;
    box-sizing: border-box;
    margin: 0 auto;
}
.img-list .img {
    float: left;
    width: 333rpx;
    height: 245rpx;
    background:rgba(216,216,216,1);
    border-radius: 8rpx;
    margin-right: 24rpx;
    margin-bottom: 24rpx;
}
.img-list .img:nth-child(2n) {
    margin-right: 0;
}
.video-list {
    width: 100%;
    padding-left: 30rpx;
    padding-right: 30rpx;
    box-sizing: border-box;
}
.video-list .video {
    width: 100%;
    height: 388rpx;
    border-radius: 8rpx;
    margin-bottom: 30rpx;
}